@{
    ViewBag.Title = "Details";
}

<div id="detailsView" class="panel panel-default">
    <h2>Address</h2>
    <div class="col-md-3">
        <span data-bind='text:address1'></span>
        79098 Freiburg Deutschland
    </div>
</div>
<script type="text/javascript" language="JavaScript">

    var modelShowDetails = kendo.observable({
                                address1: ""
                            });

    $.ajax({
        url: "//localhost:32777/api/restaurant/GetAddress1",
        dataType: "json",
        type: "GET",
        success: function (data) {
            modelShowDetails.address1 = data.Address1;
            kendo.bind($("#detailsView"), modelShowDetails);
        }
    });
    
</script>

